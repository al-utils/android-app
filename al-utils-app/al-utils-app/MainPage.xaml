    <StackLayout Spacing="0" BackgroundColor="#c6c3bb">

        <Frame BackgroundColor="#141414" CornerRadius="0"
               HeightRequest="25" Padding="0"/>

        <Frame BackgroundColor="#262524" CornerRadius="0">
            <StackLayout Orientation="Horizontal">
                <Label Text="Airing"
                       TextColor="White"
                       HeightRequest="40"
                       Margin="5, 0"
                       FontFamily="Jost"
                       FontSize="28"
                       HorizontalOptions="Start"/>
                <Label x:Name="forUser"
                       Text="for"
                       TextColor="#aaaaaa"
                       HeightRequest="40"
                       FontFamily="Jost"
                       TextTransform="Lowercase"
                       FontSize="28"
                       LineBreakMode="TailTruncation"
                       HorizontalOptions="FillAndExpand">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <ImageButton x:Name="searchIcon"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Aspect="AspectFit"
                             BackgroundColor="Transparent"
                             Padding="4"
                             Margin="0, 5, 5, 0"
                             CornerRadius="10"
                             WidthRequest="35"
                             HeightRequest="35"
                             Clicked="searchIcon_Clicked"/>
            </StackLayout>
        </Frame>

