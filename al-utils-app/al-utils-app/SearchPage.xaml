<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="al_utils_app.SearchPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#c6c3bb" Spacing="0">

            <!--header-->
            <StackLayout Spacing="0" Padding="0" VerticalOptions="End" BackgroundColor="#262524">
                <StackLayout Orientation="Vertical" BackgroundColor="#262524" Padding="25,15,25,10" Margin="0">
                    <Label Text="Search"
                           TextColor="White" 
                           FontFamily="Jost" 
                           FontSize="28"/>
                    <Frame BackgroundColor="White" 
                           CornerRadius="100" 
                           Margin="0" 
                           Padding="-3,0,-3,-3" 
                           HeightRequest="55">
                        <SearchBar x:Name="searchbar"
                                   Placeholder="Title or ID" 
                                   TextColor="#262524" 
                                   CancelButtonColor="#c6c3bb" 
                                   HorizontalOptions="FillAndExpand" 
                                   IsSpellCheckEnabled="False"
                                   TextChanged="SearchBar_TextChanged"
                                   SearchButtonPressed="searchbar_SearchButtonPressed"/>
                    </Frame>
                </StackLayout>
            </StackLayout>


            <ListView x:Name="resultList" ItemsSource="{Binding Results}" RowHeight="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding Image.ExtraLarge}" WidthRequest="150" Aspect="AspectFill"/>
                                <Label Text="{Binding Title.GetTitle}"
                                            TextColor="#262524"/>
                                <Label Text="{Binding Id}"/>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="{Binding Id}"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>