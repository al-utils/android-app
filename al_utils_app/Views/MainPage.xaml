<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:multigestureviewplugin="clr-namespace:MultiGestureViewPlugin;assembly=MultiGestureViewPlugin"
            x:Class="al_utils_app.Views.MainPage"
            BarBackgroundColor="#262524"
            SelectedTabColor="White"
            UnselectedTabColor="#888888"
            NavigationPage.HasNavigationBar="True"
            NavigationPage.HasBackButton="False">
    <TabbedPage.Resources>
        <Style Class="seasonHeader" TargetType="Label">
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style Class="grid" TargetType="Grid">
            <Setter Property="Padding" Value="15,15,15,100"/>
            <Setter Property="ColumnSpacing" Value="15"/>
            <Setter Property="RowSpacing" Value="15"/>
            <Setter Property="VerticalOptions" Value="FillAndExpand"/>
        </Style>
    </TabbedPage.Resources>

    <NavigationPage.TitleView>
        <StackLayout Spacing="0" Padding="0" VerticalOptions="End">
            <!--
            <Frame BackgroundColor="#141414" CornerRadius="0"
                   HeightRequest="25" Padding="0"/>
            <Frame BackgroundColor="#262524" CornerRadius="0">
            -->
            <StackLayout Orientation="Horizontal" BackgroundColor="Transparent" Padding="5,20,15,0">
                <Label Text="Airing"
                       TextColor="White"
                       HeightRequest="40"
                       Margin="0,0,5,0"
                       FontFamily="Jost"
                       FontSize="28"
                       HorizontalOptions="Start"/>
                <Label Text="for"
                       HeightRequest="40"
                       Margin="0,0,5,0"
                       TextColor="#aaaaaa"
                       FontFamily="Jost"
                       FontSize="28"/>
                <!--<AbsoluteLayout>
                    <BoxView BackgroundColor="#aaaaaa" HeightRequest="3"
                             Margin="0"
                             AbsoluteLayout.LayoutFlags="WidthProportional"
                             AbsoluteLayout.LayoutBounds="0,37,1,3"/>
                -->
                    <Label Text="{Binding ForUser, StringFormat='@{0}'}"
                           TextColor="#aaaaaa"
                           HeightRequest="40"
                           FontFamily="Jost"
                           TextTransform="Lowercase"
                           FontSize="28"
                           LineBreakMode="TailTruncation"
                           HorizontalOptions="FillAndExpand"
                           Margin="0"
                           Padding="0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                <!--</AbsoluteLayout>-->

                <BoxView HorizontalOptions="FillAndExpand"/>

                <ImageButton x:Name="menuIcon"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Aspect="AspectFit"
                             BackgroundColor="Transparent"
                             Padding="4"
                             Margin="0, 5, 5, 0"
                             CornerRadius="10"
                             WidthRequest="35"
                             HeightRequest="35"
                             Clicked="menuIcon_Clicked"/>
            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>

    <!--
    <ContentPage Title="{Binding ReleasingCount, StringFormat='Releasing ({0})'}">
    -->
    <ContentPage Title="{Binding ReleasingCount, StringFormat='Releasing ({0})'}">

        <StackLayout Spacing="0" BackgroundColor="#c6c3bb">
            <RefreshView x:Name="refreshView"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
                <ScrollView>
                    <Grid x:Name="releasedGrid" StyleClass="grid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--
                        <Grid.RowDefinitions>
                        <RowDefinition Height="320"/>
                        </Grid.RowDefinitions>
                        -->
                    </Grid>
                </ScrollView>
            </RefreshView>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="{Binding NotYetReleasedCount, StringFormat='Upcoming ({0})'}">
        <StackLayout Spacing="0" BackgroundColor="#c6c3bb">
            <RefreshView x:Name="refreshView2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
                <ScrollView>
                    <Grid x:Name="notYetReleasedGrid" StyleClass="grid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--
                        <Grid.RowDefinitions>
                        <RowDefinition Height="320"/>
                        </Grid.RowDefinitions>
                        -->
                    </Grid>
                </ScrollView>
            </RefreshView>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Activity">
        <StackLayout Spacing="0" BackgroundColor="#c6c3bb">
            <RefreshView x:Name="refreshView3" 
                         IsRefreshing="{Binding IsRefreshing}" 
                         Command="{Binding RefreshCommand}">
                <CollectionView x:Name="activityList" 
                                ItemsSource="{Binding ActivityList}" 
                                RemainingItemsThreshold="5" 
                                RemainingItemsThresholdReached="CollectionView_RemainingItemsThresholdReached">
                    <CollectionView.Header>
                        <StackLayout HeightRequest="20"/>
                    </CollectionView.Header>
                    <CollectionView.Footer>
                        <StackLayout HeightRequest="20"/>
                    </CollectionView.Footer>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout HeightRequest="140" Padding="20,0,20,20">
                                <Frame BackgroundColor="#3c3836" HeightRequest="10000" Padding="0" CornerRadius="10">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="{Binding Media.CoverImage.ExtraLarge}" WidthRequest="100" Aspect="AspectFill"/>
                                        <StackLayout Margin="10, 10, 20, 10" HorizontalOptions="FillAndExpand">
                                            <Label Text="{Binding GetActivityMessage}"
                                                   FontFamily="Jost"
                                                   FontSize="18"
                                                   TextColor="White"
                                                   VerticalOptions="StartAndExpand"/>
                                            <StackLayout Orientation="Horizontal" VerticalOptions="End">
                                                <Label Text="{Binding GetRelativeTime}"
                                                       FontFamily="Jost"
                                                       FontSize="15"
                                                       TextColor="#c6c3bb"
                                                       HorizontalOptions="StartAndExpand"/>
                                                <Label Text="{Binding Likes.Count,StringFormat='{0} Likes'}"
                                                       FontFamily="Jost"
                                                       FontSize="15"
                                                       TextColor="#c6c3bb"
                                                       HorizontalOptions="End"/>
                                            </StackLayout>
                                        </StackLayout>
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" CommandParameter="{Binding Media.Id}"/>
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>
    </ContentPage>

</TabbedPage>

